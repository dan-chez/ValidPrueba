<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activities.MainActivity">

    <TextView
        style="@style/OptionsTv"
        android:layout_above="@+id/ll"
        android:text="@string/optionsTitle"
        android:textSize="@dimen/optionsTitle" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_option1"
            style="@style/OptionsButtons"
            android:text="@string/optionButton1" />

        <Button
            android:id="@+id/btn_option2"
            style="@style/OptionsButtons"
            android:text="@string/optionButton2" />

    </LinearLayout>

    <TextView
        style="@style/OptionsTv"
        android:layout_below="@+id/ll"
        android:text="@string/credits"
        android:textSize="@dimen/credits" />

</RelativeLayout>